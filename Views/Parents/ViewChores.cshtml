@model IEnumerable<PlannerProject.Models.ChoreVM>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>



<dl class="row">

    <dd class="col-sm-10">
        Title: @ViewBag.ChoreListTitle
    </dd>
    <dd class="col-sm-10">
        Title: @ViewBag.ChoreListComment
    </dd>
    <dd class="col-sm-10">
        Title: @ViewBag.ChoreListReward
    </dd>
    <dd class="col-sm-10">
        Title: @ViewBag.ChoreListDayOfWeek
    </dd>
</dl>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChoreItemVM.isCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChoreItemVM.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChoreItemVM.Description)
            </th>    
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChoreItemVM.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChoreItemVM.isCompleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChoreItemVM.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChoreItemVM.Description)
            </td>
            <td>
                <a asp-action="CreateChoreList" asp-route-id="@item.ChoreItemVM">Add Chore</a> |
            </td>
        </tr>
        }
    </tbody>
</table>